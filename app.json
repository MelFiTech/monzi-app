{
  "expo": {
    "name": "monzi",
    "slug": "monzi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "monzi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFE66C"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dreemlab.monzi",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Monzi uses the camera to capture selfies for KYC verification and to scan payment account numbers for quick and accurate money transfers.",
        "NSPhotoLibraryUsageDescription": "Monzi needs access to your photo library to allow you to select and upload identity documents for account verification.",
        "NSFaceIDUsageDescription": "Monzi uses Face ID to provide secure and convenient access to your financial account."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.dreemlab.monzi"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "467a0d00-c4c0-4dbc-9b77-bfcc3cc5e1c4"
      }
    }
  }
}
